{
    "title": "Keil C51 Compile options",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "definitions": {
        "misc-controls": {
            "markdownDescription": "自定义选项 (custom options)",
            "size": "huge",
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            },
            "default": ""
        }
    },
    "properties": {
        "beforeBuildTasks": {
            "markdownDescription": "编译前要执行的命令列表 (List of commands to execute before compiling)",
            "type": "array",
            "default": [
                {
                    "name": "clean",
                    "command": "del /Q \"${OutDir}\\*.*\""
                }
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "command"
                ],
                "properties": {
                    "name": {
                        "markdownDescription": "用于显示的可读名称 (A readable name for display)",
                        "type": "string"
                    },
                    "command": {
                        "markdownDescription": "CMD 命令行 (CMD command line)",
                        "type": "string"
                    },
                    "disable": {
                        "markdownDescription": "禁用此命令 (disable this command)",
                        "type": "boolean",
                        "enum": [
                            true,
                            false
                        ]
                    },
                    "abortAfterFailed": {
                        "markdownDescription": "是否在此命令失败时，跳过后续的命令 (Whether to skip subsequent commands if this command fails)",
                        "type": "boolean",
                        "enum": [
                            true,
                            false
                        ]
                    },
                    "stopBuildAfterFailed": {
                        "markdownDescription": "是否在此命令失败时，直接停止编译 (Whether to stop compiling directly when this command fails)",
                        "type": "boolean",
                        "enum": [
                            true,
                            false
                        ]
                    }
                }
            }
        },
        "afterBuildTasks": {
            "markdownDescription": "编译结束后要执行的命令列表 (List of commands to execute after compilation)",
            "type": "array",
            "default": [
                {
                    "name": "clean",
                    "command": "del \"${OutDir}\\*._*\""
                }
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "command"
                ],
                "properties": {
                    "name": {
                        "markdownDescription": "用于显示的可读名称 (A readable name for display)",
                        "type": "string"
                    },
                    "command": {
                        "markdownDescription": "CMD 命令行 (CMD command line)",
                        "type": "string"
                    },
                    "disable": {
                        "markdownDescription": "禁用此命令 (disable this command)",
                        "type": "boolean",
                        "enum": [
                            true,
                            false
                        ]
                    },
                    "abortAfterFailed": {
                        "markdownDescription": "是否在此命令失败时，跳过后续的命令 (Whether to skip subsequent commands if this command fails)",
                        "type": "boolean",
                        "enum": [
                            true,
                            false
                        ]
                    }
                }
            }
        },
        "global": {
            "markdownDescription": "全局选项 (Global Options)",
            "type": "object",
            "properties": {
                "ram-mode": {
                    "type": "string",
                    "markdownDescription": "RAM 模式 (RAM mode)",
                    "default": "SMALL",
                    "enum": [
                        "SMALL",
                        "COMPACT",
                        "LARGE"
                    ],
                    "enumDescriptions": [
                        "variables in DATA",
                        "variables in PDATA",
                        "variables in XDATA"
                    ]
                },
                "rom-mode": {
                    "type": "string",
                    "markdownDescription": "ROM 模式 (ROM mode)",
                    "default": "LARGE",
                    "enum": [
                        "SMALL",
                        "COMPACT",
                        "LARGE"
                    ],
                    "enumDescriptions": [
                        "program 2K or less",
                        "2K functions, 64K program",
                        "64K program"
                    ]
                }
            }
        },
        "c/cpp-compiler": {
            "markdownDescription": "C 编译器选项 (C Compiler Options)",
            "type": "object",
            "properties": {
                "optimization-type": {
                    "type": "string",
                    "readable_name": "优化类型 (optimization type)",
                    "markdownDescription": "代码优化的侧重类型 (Code optimization focuses on types)",
                    "default": "SPEED",
                    "enum": [
                        "SPEED",
                        "SIZE"
                    ],
                    "enumDescriptions": [
                        "Focus on code speed optimization",
                        "Focus on code size optimization"
                    ]
                },
                "optimization-level": {
                    "type": "string",
                    "markdownDescription": "优化级别 (optimization level)",
                    "default": "level-8",
                    "enum": [
                        "level-0",
                        "level-1",
                        "level-2",
                        "level-3",
                        "level-4",
                        "level-5",
                        "level-6",
                        "level-7",
                        "level-8",
                        "level-9"
                    ],
                    "enumDescriptions": [
                        "Constant folding",
                        "Dead code elimination",
                        "Data overlaying",
                        "Peephole optimization",
                        "Register variables",
                        "Common subexpression elimination",
                        "Loop rotation",
                        "Extended index access optimizing",
                        "Reuse common entry code",
                        "Common block subroutines"
                    ]
                },
                "misc-controls": {
                    "markdownDescription": "其他选项 (Other Options)",
                    "$ref": "#/definitions/misc-controls"
                }
            }
        },
        "asm-compiler": {
            "markdownDescription": "汇编器选项 (Assembler options)",
            "type": "object",
            "properties": {
                "misc-controls": {
                    "markdownDescription": "其他选项 (Other Options)",
                    "$ref": "#/definitions/misc-controls"
                }
            }
        },
        "linker": {
            "markdownDescription": "链接器选项 (Linker options)",
            "type": "object",
            "properties": {
                "remove-unused": {
                    "type": "boolean",
                    "default": false,
                    "description": "删除未使用的程序和数据段 (remove unused code/data segments)"
                },
                "output-format": {
                    "type": "string",
                    "default": "elf",
                    "description": "输出格式 (output format)",
                    "enum": [
                        "elf",
                        "lib"
                    ],
                    "enumDescriptions": [
                        "可执行文件 (executable file)",
                        "静态库 (static library)"
                    ]
                },
                "use-RTX": {
                    "type": "string",
                    "default": "None",
                    "description": "使用 RTX 操作系统 (use RTX operation system)",
                    "enum": [
                        "None",
                        "RTX-Full",
                        "RTX-Tiny"
                    ]
                },
                "disable-warnings": {
                    "type": "array",
                    "description": "屏蔽特定的警告 (disable specific warning)",
                    "default": [],
                    "items": {
                        "type": "string",
                        "pattern": "\\d+"
                    }
                },
                "misc-controls": {
                    "markdownDescription": "其他选项 (Other Options)",
                    "$ref": "#/definitions/misc-controls"
                }
            }
        }
    }
}