// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build vsix",
			"type": "shell",
			"command": "vsce package",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "publish app",
			"type": "shell",
			"command": "vsce publish",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "prepack binaries",
			"type": "shell",
			"command": [
				"rm ./bin/builder/* -Include *.xml,*.exe.config -Verbose -Force;",
				"rm D:\\Code-Project\\TypeScript\\eide-templates\\binaries\\bin.zip -Verbose -Force;"
			],
			"problemMatcher": []
		},
		{
			"label": "pack binaries",
			"type": "shell",
			"command": "7za a -r -y -ssw -tzip -mx9 \"%OUT_NAME%\" .\\bin\\*",
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				},
				"env": {
					"OUT_NAME": "D:\\Code-Project\\TypeScript\\eide-templates\\binaries\\bin.zip"
				}
			},
			"dependsOn": [
				"prepack binaries"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]
}